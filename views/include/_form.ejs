 <!--form handling-->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class='dark'>Name</label>
            <input type="hidden" name="id" value=""/>
            <input type="text" name="name" value="" placeholder="Eldad Mwangi"  />
        </div>
        <div class="form-group">
            <label for="email" class='dark'>Email</label>
            <input type="text" name="email" value="" placeholder="eldad@gmail.com"  />
        </div>
        <!--GENDER-->
        <div class="form-group">
            <label for="gender" class='dark'>Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="gender" value="male" />
                <label for="radio-1" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="female" />
                <label for="radio-2" class="radio-label">Female</label>
            </div>
        </div>
        <!--STATUS-->
        <div class="form-group">
            <label for="status" class='dark'>Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="status" value="Active" />
                <label for="radio-3" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Inactive" />
                <label for="radio-4" class="radio-label">Inactive</label>
            </div>
        </div>
        <!--STATUS-->
        <div class="form-group">
            <button type="submit" class="btn dark update ">Save</button>
        </div>
        <!--Submit Button-->


    </div>
</form>
<!--form handling-->